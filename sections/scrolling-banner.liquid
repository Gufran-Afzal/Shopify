{%- liquid
  assign section_prefix_class = 'scrolling-banner'
  assign section_scheme_class = section.settings.section_color_scheme | prepend: 'scheme scheme--'
  
  capture container_class
    if section.settings.section_full_width
      echo 'container-fluid'
      else
        echo 'container'
    endif
  endcapture

  assign marquee_direction = 'backward'
  if section.settings.marquee_direction == 'marquee_forward'
    assign marquee_direction = 'forward'
  endif

  assign multiply_factor = 6
  if section.blocks.size > 3
    assign multiply_factor = 4
    elsif section.blocks.size > 6
      assign multiply_factor = 2
  endif
-%}
{%- style -%}
  .scrolling-banner .marquee-component_col{
    padding: 8px 20px;
  }

  .scrolling-banner .marquee-component_col,
  .scrolling-banner_column{
    display: flex;
  }

  .scrolling-banner .marquee-component{
    align-items: center;
  }

  .scrolling-banner_column{
    width: 100%;
    margin-top: auto;
    margin-bottom: auto;
    align-items: center;
    gap: 37px;
    padding: 11px 0px;
  }

  .scrolling-banner .container-fluid{
    --cp-spacer-left: 0;
    --cp-spacer-right: 0;
  }

  .scrolling-banner_image-wrap{
    width: 24px;
    height: 24px;
    position: relative;
    overflow: hidden;
  }

  .scrolling-banner_image-wrap img{
    border-radius: inherit;
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
  }

  .scrolling-banner_text-wrap{
    flex-grow: 1;
  }

  .scrolling-banner_heading,
  .scrolling-banner_space:after{
    display: block;
  }

  a.scrolling-banner_column{
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .scrolling-banner_space:after{
    content: "";
    border: 1px solid var(--section-foreground-color);
    width: 12px;
  }

  .--stencil-text{
    -webkit-text-fill-color: var(--section-background-color);
    -webkit-text-stroke: 1px var(--section-heading-color);
  }
{%- endstyle -%}
<div class="global-block {{ section_prefix_class }} {{ section_prefix_class }}-{{ section.id }}" style="--section-radius-small: 10px; --section-radius-large: 999px; --section-padding-top: {{ section.settings.section_top_padding }}px; --section-padding-bottom: {{ section.settings.section_bottom_padding }}px;">
  <div class="{{ container_class }}">
    <div class="{{ section_prefix_class }}_wrapper {{ section_scheme_class }}">
      <marquee-component data-direction="{{ marquee_direction }}" data-pause-on-hover="{{ section.settings.marquee_on_hover }}" data-speed="{{ section.settings.marquee_speed }}">
        <div class="marquee-component marquee-component--h-scroll">
          {%- for i in (1..multiply_factor) -%}
            {%- for block in section.blocks -%}
              <div class="marquee-component_col clonedBefore">
                {%- if block.settings.link_url != blank -%}
                  <a href="{{ block.settings.link_url }}" {% if block.settings.open_new_window %}target="_blank"{% endif %} class="{{ section_prefix_class }}_column">
                  {% else %}
                    <div class="{{ section_prefix_class }}_column">
                  {%- endif -%}
                  <div class="{{ section_prefix_class }}_text-wrap">
                    {%- if block.settings.heading != blank -%}
                      <strong class="{{ section_prefix_class }}_heading {{ section.settings.block_heading_size }} {{ section.settings.block_heading_weight }} {% if block.settings.stencil_text %}--stencil-text{% endif %}">{{- block.settings.heading -}}</strong>
                    {%- endif -%}
                  </div>
                  {%- if block.settings.image != blank -%}
                    <div class="{{ section_prefix_class }}_image-wrap">
                      {%- liquid
                        capture image_alt
                          if block.settings.image.alt != blank
                            echo block.settings.image.alt
                            else
                              echo block.settings.heading | escape
                          endif
                        endcapture

                        capture loading_attr
                          unless section.index != 1
                            unless forloop.index != 1
                              echo 'eager'
                              else
                                echo 'lazy'
                            endunless
                            else
                              echo 'lazy'
                          endunless
                        endcapture

                        assign image_height = 38 | divided_by: block.settings.image.aspect_ratio | round
                      -%}
                      {{- block.settings.image | image_url: width: 49 | image_tag:
                        alt: image_alt,
                        width: 38,
                        height: image_height,
                        widths: '38, 49',
                        sizes: '(max-width: 767px) 38px, 49px',
                        loading: loading_attr
                      -}}
                    </div>
                    {%- else -%}
                    <div class="{{ section_prefix_class }}_space"></div>
                  {%- endif -%}
                  {%- if block.settings.link_url != blank -%}
                    </a>
                  {%- else -%}
                  </div>
                {%- endif -%}
              </div>
            {%- endfor -%}
          {%- endfor -%}
          {%- for block in section.blocks -%}
            <div class="marquee-component_col">
              {%- if block.settings.link_url != blank -%}
                <a href="{{ block.settings.link_url }}" {% if block.settings.open_new_window %}target="_blank"{% endif %} class="{{ section_prefix_class }}_column">
                {% else %}
                  <div class="{{ section_prefix_class }}_column">
                {%- endif -%}
                <div class="{{ section_prefix_class }}_text-wrap">
                  {%- if block.settings.heading != blank -%}
                    <strong class="{{ section_prefix_class }}_heading {{ section.settings.block_heading_size }} {{ section.settings.block_heading_weight }} {% if block.settings.stencil_text %}--stencil-text{% endif %}">{{- block.settings.heading -}}</strong>
                  {%- endif -%}
                </div>
                {%- if block.settings.image != blank -%}
                  <div class="{{ section_prefix_class }}_image-wrap">
                    {%- liquid
                      capture image_alt
                        if block.settings.image.alt != blank
                          echo block.settings.image.alt
                          else
                            echo block.settings.heading | escape
                        endif
                      endcapture

                      assign image_height = 38 | divided_by: block.settings.image.aspect_ratio | round
                    -%}
                    {{- block.settings.image | image_url: width: 49 | image_tag:
                      alt: image_alt,
                      width: 38,
                      height: image_height,
                      widths: '38, 49',
                      sizes: '(max-width: 767px) 38px, 49px',
                      loading: 'lazy'
                    -}}
                  </div>
                  {%- else -%}
                  <div class="{{ section_prefix_class }}_space"></div>
                {%- endif -%}
                {%- if block.settings.link_url != blank -%}
                  </a>
                {%- else -%}
                </div>
              {%- endif -%}
            </div>
          {%- endfor -%}
          {%- for i in (1..multiply_factor) -%}
            {%- for block in section.blocks -%}
              <div class="marquee-component_col clonedAfter">
                {%- if block.settings.link_url != blank -%}
                  <a href="{{ block.settings.link_url }}" {% if block.settings.open_new_window %}target="_blank"{% endif %} class="{{ section_prefix_class }}_column">
                  {% else %}
                    <div class="{{ section_prefix_class }}_column">
                  {%- endif -%}
                  <div class="{{ section_prefix_class }}_text-wrap">
                    {%- if block.settings.heading != blank -%}
                      <strong class="{{ section_prefix_class }}_heading {{ section.settings.block_heading_size }} {{ section.settings.block_heading_weight }} {% if block.settings.stencil_text %}--stencil-text{% endif %}">{{- block.settings.heading -}}</strong>
                    {%- endif -%}
                  </div>
                  {%- if block.settings.image != blank -%}
                    <div class="{{ section_prefix_class }}_image-wrap">
                      {%- liquid
                        capture image_alt
                          if block.settings.image.alt != blank
                            echo block.settings.image.alt
                            else
                              echo block.settings.heading | escape
                          endif
                        endcapture

                        assign image_height = 38 | divided_by: block.settings.image.aspect_ratio | round
                      -%}
                      {{- block.settings.image | image_url: width: 49 | image_tag:
                        alt: image_alt,
                        width: 38,
                        height: image_height,
                        widths: '38, 49',
                        sizes: '(max-width: 767px) 38px, 49px',
                        loading: 'lazy'
                      -}}
                    </div>
                    {%- else -%}
                    <div class="{{ section_prefix_class }}_space"></div>
                  {%- endif -%}
                  {%- if block.settings.link_url != blank -%}
                    </a>
                  {%- else -%}
                  </div>
                {%- endif -%}
              </div>
            {%- endfor -%}
          {%- endfor -%}
        </div>
      </marquee-component>
    </div>
  </div>
</div>

{% schema %}

{
