  </symbol>
  <symbol id="icn-right-pg-{{ section.id }}">
    <path fill-rule="evenodd" clip-rule="evenodd" d="M0.26711 8.02876C0.0374343 7.78989 0.0448818 7.41007 0.283745 7.18039L3.43395 4.21289L0.283745 1.24539C0.0448814 1.01571 0.0374339 0.635888 0.26711 0.397025C0.496786 0.158162 0.876612 0.150714 1.11548 0.38039L4.71548 3.78039C4.83312 3.89351 4.89961 4.04968 4.89961 4.21289C4.89961 4.3761 4.83312 4.53227 4.71548 4.64539L1.11548 8.04539C0.876612 8.27507 0.496786 8.26762 0.26711 8.02876Z" fill="currentColor"/>
  </symbol>
</svg>
<div class="global-block {{ section_prefix_class }} {{ section_prefix_class }}-{{ section.id }} {{ section_scheme_class }}" id="{{- section.id -}}" style="--section-padding-top: {{ section.settings.section_top_padding }}px; --section-padding-bottom: {{ section.settings.section_bottom_padding }}px; --columns-count: {{ section.settings.number_of_columns_on_desktop }};">
  <div class="container">
    <div class="{{ section_prefix_class }}_wrapper">
      <header class="heading-head --align-center">
				{%- if section.settings.section_caption != blank -%}
					<div class="{{ section_prefix_class }}_caption --word-break {{ section.settings.section_caption_size }} {{ section.settings.section_caption_weight }} mty">
						{{- section.settings.section_caption -}}
					</div>
				{%- endif -%}
        <h1 class="{{ section_prefix_class }}_heading {{ section.settings.section_heading_size }} {{ section.settings.section_heading_weight }} mty">{{- blog.title -}}</h1>
        {%- if section.settings.section_description -%}
          <div class="{{ section_prefix_class }}_description --word-break {{ section.settings.section_text_size }} {{ section.settings.section_description_weight }} mty">
            <p>{{- section.settings.section_description -}}</p>
          </div>
        {%- endif -%}
      </header>
      {%- if blog.articles_count == 0 -%}
        <div class="grid_col grid_col--empty">
          <div class="{{ section_prefix_class }}_empty-content --align-center">
            <i class="{{ section_prefix_class }}_icn">
              {%- render 'icons-data', width: 38, height: 38, use_icon: true, icon_reference: 'empty-box' -%}
            </i>
            <strong class="h6 {{ section_prefix_class }}_empty-heading mty">
              {{- 'main_blog.empty_heading' | t -}}
            </strong>
          </div>
        </div>
      {%- else -%}
        {%- paginate blog.articles by max_blogs_to_show -%}
          <div class="grid {{ section_prefix_class }}_grid">
            {%- for article in blog.articles -%}
              <div class="grid_col">
                {%- render 'blog-card',
                  article: article,
                  show_image: section.settings.show_featured_image,
                  show_date: section.settings.show_date,
                  show_author: section.settings.show_author,
                  show_excerpt: section.settings.show_excerpt,
                  show_tags: section.settings.show_tags,
                  show_comments_count: section.settings.show_comments_count,
                  prefix_class: section_scheme_class,
									index: forloop.index,
                  section_id: section.id
                -%}
              </div>
            {%- endfor -%}
          </div>
          {%- liquid
            if paginate.pages > 1
              render 'pagination', paginate: paginate, prefix_class: section_prefix_class, section_id: section.id
            endif
          -%}
        {%- endpaginate -%}
      {%- endif -%}
    </div>
  </div>
</div>

