<div class="global-block {{ section_prefix_class }} {{ section_prefix_class }}-{{ section.id }} {{ section_scheme_class }} --align-{{ section.settings.section_text_alignment }}" id="{{- section.id -}}" style="--section-padding-top: {{ section.settings.section_top_padding }}px; --section-padding-bottom: {{ section.settings.section_bottom_padding }}px; --columns-count: {{ section.settings.number_of_columns_on_desktop }}; --mobile-columns-count: {{ section.settings.number_of_columns_on_mobile }}; --mobile-q-align: {{ section.settings.section_mobile_text_alignment }}; --desktop-q-align: {{ section.settings.section_text_alignment }};">
  <div class="container">
    <div class="{{ section_prefix_class }}_wrapper">
      {%- if section.settings.heading != blank or section.settings.section_description != blank or section.settings.section_caption != blank -%}
        <div class="container">
          <header class="heading-head">
            {%- if section.settings.section_caption != blank -%}
                <div class="{{ section_prefix_class }}_caption --word-break {{ section.settings.section_caption_size }} {{ section.settings.section_caption_weight }} mty">
                    {{- section.settings.section_caption -}}
                </div>
            {%- endif -%}
            {%- if section.settings.heading != blank -%}
              <h1 class="{{ section_prefix_class }}_heading {{ section.settings.section_heading_size }} {{ section.settings.section_heading_weight }} --h-anchor-none mty">{{- section.settings.heading -}}</h1>
            {%- endif -%}
            {%- if section.settings.section_description != blank -%}
              <div class="{{ section_prefix_class }}_description {{ section.settings.section_description_weight }} --word-break {{ section.settings.section_text_size }} mty">
                <p>{{- section.settings.section_description -}}</p>
              </div>
            {%- endif -%}
          </header>
        </div>
      {%- endif -%}
      {%- paginate collections by paginate_by -%}
        <div class="grid {{ section_prefix_class }}_grid">
          {%- for collection in collections -%}
            <div class="grid_col">
              {%- liquid
                capture loading_attr
                  if forloop.index > 5
                    echo 'lazy'
                    else
                      echo 'eager'
                  endif
                endcapture
              -%}
              {%- capture image_sizes -%}
                (max-width: 414px) calc(100vw - 44px), (max-width: 767px) calc((100vw / {{ section.settings.number_of_columns_on_mobile }}) - 44px), (max-width: 992px) calc((100vw / 3) - 44px), (max-width: 1200px) calc((100vw / 4) - 44px), calc(({{ settings.page_width }} / {{ section.settings.number_of_columns_on_desktop }}) - 44px)
              {%- endcapture -%}
              {%- render 'collection-card', card: collection, prefix_class: section_prefix_class, heading_size: section.settings.card_heading_size, heading_weight: section.settings.card_heading_weight, caption_weight: section.settings.card_caption_weight, media_size: section.settings.card_media_size, show_title: true, index: forloop.index, custom_image: '', content_position: section.settings.card_content_position, heading_tag: 'h2', loading_attr: loading_attr, size_attr: image_sizes, width_attr: '560', widths: '150, 200, 336, 367, 500, 560', section_id: section.id -%}
            </div>
          {%- endfor -%}
        </div>
        {%- render 'pagination', paginate: paginate, prefix_class: section_prefix_class, section_id: section.id -%}
      {%- endpaginate -%}
    </div>
  </div>
</div>
