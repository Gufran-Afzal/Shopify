{%- liquid
  assign section_prefix_class = 'main-404'
  assign section_scheme_class = section.settings.section_color_scheme | prepend: 'scheme scheme--'

	capture loading_attr
		if section.index > 1
			echo 'lazy'
			else
				echo 'eager'
		endif
	endcapture

	capture heading_alt
		echo 'main_404.label' | t
	endcapture

	capture img_blank
		if section.settings.image == blank
			echo '--image-none'
		endif
	endcapture

	capture btn_url
		echo section.settings.section_link | default: routes.root_url
	endcapture

	capture btn_label
		if section.settings.section_link_label != blank
			echo section.settings.section_link_label | escape
			else
				echo 'main_404.button_label' | t
		endif
	endcapture
-%}
{%- style -%}
  .main-404,
  .main-404_img,
  .main-404_form-align{
    position: relative;
  }

  .main-404 .container-fluid{
    --cp-spacer-left: 0;
    --cp-spacer-right: 0;
  }

  .main-404_empty-icn,
  .main-404_caption-one::after,
  .main-404_btn-label{
    display: block;
  }

  .main-404_btn svg{
    flex-shrink: 0;
  }

  .main-404_empty-icn{
    margin-bottom: 43px;
  }

  .main-404_empty-icn svg{
    color: var(--section-heading-color);
  }

  .main-404_description,
  .main-404_caption-one,
  .main-404_caption-two{
    margin-top: 16px;
  }

  .main-404_btn,
  .main-404_wrapper{
    display: flex;
  }

  .main-404_btn{
    justify-content: space-between;
    align-items: center;
    gap: 20px;
    --button-padding-y: 1.7rem;
    --button-text-alignment: left;
  }

  .main-404_wrapper{
    justify-content: center;
  }

  .main-404_column{
    flex-grow: 1;
    flex-basis: 0;
    min-width: 50%;
  }

  .main-404_column--image{
    display: none;
  }

  .main-404_img{
    height: 100%;
  }

  .main-404_btn,
  .main-404_img{
    width: 100%;
  }

  .main-404_form-align{
    padding: 70px 15px 44px 15px;
    max-width: 491px;
  }

  .main-404_caption-one::after {
    content: '';
    height: 182px;
    border-left: 1px solid var(--section-border-color);
    margin-top: 28px;
  }

  .--image-none .main-404_form-align{
    max-width: 100%;
  }

  .main-404_column.align-holder{
    flex-direction: column;
  }

  .main-404_foot:focus-within {
    padding: 4px;
  }

  .align-holder--mcenter .main-404_form-align.align-holder_wrapper{
    margin: 0;
  }

  @media(min-width: 768px){
    .main-404_column--image{
      display: block;
    }

    .main-404_form-align{
      padding-top: 170px;
      padding-left: 30px;
      padding-right: 40px;
    }
  }

  @media(min-width: 1200px){
    .main-404_form-align{
      padding-left: 108px;
    }

    .main-404_btn{
      --button-padding-x: 9.9rem;
    }
  }
{%- endstyle -%}
