<div class="global-block {{ section_prefix_class }} {{ section_prefix_class }}-{{ section.id }} {{ section_scheme_class }}" style="--section-padding-top: {{ section.settings.section_top_padding }}px; --section-padding-bottom: {{ section.settings.section_bottom_padding }}px;">
  <div class="container-fluid">
    <div class="{{ section_prefix_class }}_wrapper">
      {%- if section.settings.image != blank -%}
        <div class="{{ section_prefix_class }}_column {{ section_prefix_class }}_column--image">
          <div class="{{ section_prefix_class }}_img">
            {{- section.settings.image | image_url: width: 1944 | image_tag: class: 'object-fit object-fit--absolute', loading: loading_attr, alt: heading_alt, widths: '972, 1944', sizes: '(max-width: 767px) 972vw, 1944vw' -}}
          </div>
        </div>
				{%- else -%}
					<div class="{{ section_prefix_class }}_column {{ section_prefix_class }}_column--image">
						<div class="{{ section_prefix_class }}_img">
							{{- 'hero-apparel-1' | placeholder_svg_tag: 'object-fit object-fit--absolute' -}}
						</div>
					</div>
      {%- endif -%}
      <div class="{{ section_prefix_class }}_column align-holder {{ img_blank }} align-holder--mcenter">
        <div class="{{ section_prefix_class }}_form-align align-holder_wrapper">
					<span class="{{ section_prefix_class }}_empty-icn">
						{%- render 'icons-data', width: 104, height: 103, use_icon: true, icon_reference: '404-icon', section_id: section.id -%}
					</span>
					{%- if section.settings.heading != blank -%}
						<h1 class="{{ section_prefix_class }}_heading {{ section.settings.section_heading_size }} {{ section.settings.section_heading_weight }} --word-break mty">
							{{ section.settings.heading }}
						</h1>
					{%- endif -%}
					{%- if section.settings.section_description != blank -%}
						<div class="{{ section_prefix_class }}_description {{ section.settings.section_description_size }} {{ section.settings.section_description_weight }} --word-break mty">
							{{ section.settings.section_description }}
						</div>
					{%- endif -%}
					{%- if section.settings.caption_one != blank -%}
						<div class="{{ section_prefix_class }}_caption-one {{ section.settings.caption_one_size }} {{ section.settings.caption_one_weight }} --word-break">
							{{ section.settings.caption_one }}
						</div>
					{%- endif -%}
					{%- if section.settings.caption_two != blank -%}
						<div class="{{ section_prefix_class }}_caption-two {{ section.settings.caption_two_size }} {{ section.settings.caption_two_weight }} --word-break">
							{{ section.settings.caption_two }}
						</div>
					{%- endif -%}
        </div>
				<footer class="{{ section_prefix_class }}_foot --justify-self mty">
					<a
						href="{{- btn_url -}}" 
						class="{{ section_prefix_class }}_btn button button--{{ section.settings.section_link_type }}"
						{% if section.settings.section_link_target %}target="_blank"{% endif %}
					>
						<span class="{{ section_prefix_class }}_btn-label --word-break">
							{{- btn_label -}}
						</span>
						{%- render 'icons-data', width: 33, height: 10, use_icon: true, icon_reference: 'btn-arrow', section_id: section.id -%}
					</a>
				</footer>
      </div>
    </div>
  </div>
</div>

