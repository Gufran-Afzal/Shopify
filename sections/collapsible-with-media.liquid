<div class="global-block {{ section_prefix_class }} {{ section_prefix_class }}-{{ section.id }} --q-align {{ section_scheme_class }}" style="--section-padding-top: {{ section.settings.section_top_padding }}px; --section-padding-bottom: {{ section.settings.section_bottom_padding }}px; --mobile-q-align: {{ section.settings.section_mobile_text_alignment }}; --desktop-q-align: {{ section.settings.section_text_alignment }};">
  <div class="container">
    <div class="{{ section_prefix_class }}_wrapper {{ cols_order_class }} --v-align-{{ section.settings.content_alignment }}">
      {%- if media_exists == 'true' -%}
        <div class="{{ section_prefix_class }}_col {{ section_prefix_class }}_col-image">
          <splide-slider
            data-slider-type="default"
            {% if request.design_mode %}
              data-go-to="true"
            {% endif %}
          >
            <div class="splide {{ section_prefix_class }}_slider"
              data-splide='{
                "drag": false,
                "autoplay": {{- section.settings.auto_play -}},
                "rewind": true,
                "gap": "30px",
                "perMove": 1,
                "perPage": 1,
                {% if section.blocks.size > 1 %}
                  "arrows": {{- section.settings.show_navigation -}},
                  "pagination": {{- section.settings.show_pagination -}},
                {% else %}
                  "arrows": false,
                  "pagination": false,
                {% endif %}
                "interval": {{- section.settings.change_slides_every | times: 1000 -}},
                "type": "slide"
              }'
            >
              <div class="splide__track">
                <div class="splide__list splide-slider--h-scroll" style="--init-divider: 1; --init-mob-divider: 1;">
                  {%- for block in section.blocks -%}
                    {%- liquid
                      capture loading_attr
                        unless section.index != 1
                          unless forloop.first
                            echo 'lazy'
                            else
                              echo 'eager'
                          endunless
                          else
                            echo 'lazy'
                        endunless
                      endcapture
                    -%}
                    {%- case block.type -%}
                      {%- when 'video' -%}
                        <div class="splide__slide" {{ block.shopify_attributes }}>
                          {%- render 'video-card', card: block, card_media_option: section.settings.section_media_size, prefix_class: section_prefix_class, index: forloop.index, sizes_attr: sizes_attr, widths_attr: widths_attr, loading_attr: loading_attr, width_attr: 711, section_id: section.id -%}
                        </div>
                      {%- when 'image' -%}
                        {%- liquid
                          capture placeholder_image
                            if forloop.index > 3
                              echo 'hero-apparel-1'
                              else
                                echo 'hero-apparel-' | append: forloop.index
                            endif
                          endcapture

                          capture image_alt
                            if block.settings.image != blank
                              if block.settings.image.alt != blank
                                echo block.settings.image.alt
                                else
                                  echo 'collapsible_media.image_alt' | t: index: forloop.index
                              endif
                            endif
                          endcapture

                          capture section_media_size
                            if section.settings.section_media_size == 'adapt'
                              echo block.settings.image.aspect_ratio | default: '1'
                              else
                                echo '1'
                            endif
                          endcapture
                        -%}
                        <div class="splide__slide" {{ block.shopify_attributes }}>
                          <div class="{{ section_prefix_class }}_image-wrap --media-size-{{ section.settings.section_media_size }}" style="--media-ratio: {{ section_media_size }};">
                            {%- if block.settings.image != blank -%}
                              {%- assign image_height = 284 | divided_by: block.settings.image.aspect_ratio | round -%}
                              {{- block.settings.image | image_url: width: 711 | image_tag:
                                class: 'object-fit object-fit--absolute',
                                loading: loading_attr,
                                width: 284,
                                height: image_height,
                                widths: widths_attr,
                                sizes: sizes_attr,
                                alt: image_alt
                              -}}
                              {%- else -%}
                                {{- placeholder_image | placeholder_svg_tag: 'object-fit object-fit--absolute' -}}
                            {%- endif -%}
                          </div>
                        </div>
                    {%- endcase -%}
                  {%- endfor -%}
                </div>
              </div>
              {%- if section.blocks.size > 1 -%}
                {%- if section.settings.show_navigation or section.settings.show_pagination -%}
                  <div class="splide-controls splide__arrows --justify-center">
                    {%- if section.settings.show_navigation -%}
                      <button class="splide__arrow splide__arrow--prev button button--primary button--icn">
                        <span class="visually-hidden">{{- 'accessibility.slider.previous' | t -}}</span>
                        {%- render 'icons-data', width: 10, height: 10, use_icon: true, icon_reference: 'left-arrow', section_id: section.id -%}
                      </button>
                    {%- endif -%}
                    <ul
                      class="splide__pagination"
                      role="tablist"
                      aria-label="{{- 'accessibility.slider.pagination_label' | t -}}"
                    ></ul>
                    {%- if section.settings.show_navigation -%}
                      <button class="splide__arrow splide__arrow--next button button--primary button--icn">
                        <span class="visually-hidden">{{- 'accessibility.slider.next' | t -}}</span>
                        {%- render 'icons-data', width: 10, height: 10, use_icon: true, icon_reference: 'right-arrow', section_id: section.id -%}
                      </button>
                    {%- endif -%}
                  </div>
                {%- endif -%}
              {%- endif -%}
            </div>
          </splide-slider>
        </div>
      {% endif %}
      <div class="{{ section_prefix_class }}_col {{ section_prefix_class }}_col-description">
        {%- if section.settings.section_heading != blank or section.settings.section_caption != blank -%}
          <header class="heading-head inner-container --q-align" style="--max-content: {{ max_header_size }}px;">
            {%- if section.settings.section_heading != blank -%}
              <h2 class="{{ section_prefix_class }}_heading {{ section.settings.section_heading_size }} {{ section.settings.section_heading_weight }} --h-anchor-none mty">
                {{- section.settings.section_heading -}}
              </h2>
            {%- endif -%}
            {%- if section.settings.section_caption != blank -%}
              <strong class="{{ section_prefix_class }}_caption --word-break {{ section.settings.section_caption_weight }} {{ section.settings.section_caption_size }} mty">{{- section.settings.section_caption -}}</strong>
            {%- endif -%}
          </header>
        {%- endif -%}
        <div class="{{ section_prefix_class }}_rows-wrap --align-left">
          {%- if section.settings.section_collapsible_heading != blank -%}
            <div class="{{ section_prefix_class }}_collapsible-heading {{ section.settings.section_collapsible_heading_size }} {{ section.settings.section_collapsible_heading_weight }} --h-anchor-none mty">
              {{- section.settings.section_collapsible_heading -}}
            </div>
          {%- endif -%}
          {%- for block in section.blocks -%}
            {%- case block.type -%}
              {%- when 'collapse_row' -%}
                {%- liquid
                  capture opener_label
                    if block.settings.heading != blank
                      echo block.settings.heading
                      else
                        echo 'accordion.opener_label' | t: index: forloop.index
                    endif
                  endcapture
                -%}
                <details class="open-close collapsible-accordion --accordion-view"
                  {% if block.settings.open_by_default %}open{% endif %}
                  {{ block.shopify_attributes }}
                >
                  <summary
                    class="open-close_opener mty h6"
                    aria-controls="sect-{{ section.id }}-{{ block.id }}"
                    id="{{ section.id }}-{{ block.id }}-accordion"
                  >
                    {{- opener_label -}}
                    <i class="open-close_opener-icn open-close_opener--icn-open">
                      {%- render 'icons-data', width: 10, height: 10, use_icon: true, icon_reference: 'plus' -%}
                    </i>
                    <i class="open-close_opener-icn open-close_opener--icn-close">
                      {%- render 'icons-data', width: 10, height: 10, use_icon: true, icon_reference: 'minus' -%}
                    </i>
                  </summary>
                  <div
                    role="region"
                    id="sect-{{ section.id }}-{{ block.id }}"
                    class="open-close_slide widget--styles"
                    aria-labelledby="{{ section.id }}-{{ block.id }}-accordion"
                  >
                    <div class="open-close_slide-wrapper text-size--medium --fw-light --word-break">
                      {{- block.settings.description -}}
                    </div>
                  </div>
                </details>
            {%- endcase -%}
          {%- endfor -%}
        </div>
      </div>
    </div>
  </div>
</div>
