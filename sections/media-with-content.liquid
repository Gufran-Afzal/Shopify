    .video-card_caption-title{
      --heading-size-factor: 0.8;
    }
  }

  @media (max-width: 767px){
    .video-card_caption-title{
      --heading-size-factor: 0.5;
    }
  }
{%- endstyle -%}
<div class="global-block {{ section_prefix_class }} {{ section_prefix_class }}-{{ section.id }}" id="{{- section.id -}}" style="--section-padding-top: {{ section.settings.section_top_padding }}px; --section-padding-bottom: {{ section.settings.section_bottom_padding }}px; --mobile-q-align: {{ section.settings.section_mobile_text_alignment }}; --desktop-q-align: {{ section.settings.section_text_alignment }};">
  <div class="{{ container_class }}">
    <div class="{{ section_prefix_class }}_wrapper {{ cols_order_class }} {% unless section.settings.desktop_enable_container %}{{ section_scheme_class }} {{ section_prefix_class }}_wrapper--no-box{% endunless %}">
      {%- if section.blocks.size > 0 -%}
        <div class="{{ section_prefix_class }}_col {{ section_prefix_class }}_col-media">
          <splide-slider
            data-slider-type="default"
            {% if request.design_mode %}
              data-go-to="true"
            {% endif %}
          >
            <div 
              class="splide"
              data-splide='{
                "drag": false,
                "autoplay": {{- section.settings.auto_play -}},
                "rewind": true,
                "pauseOnHover": true,
                "gap": "30px",
                "perMove": 1,
                "perPage": 1,
                {% if section.blocks.size > 1 %}
                  "arrows": {{- section.settings.show_navigation -}},
                  "pagination": {{- section.settings.show_pagination -}},
                {% else %}
                  "arrows": false,
                  "pagination": false,
                {% endif %}
                "interval": {{- section.settings.change_slides_every | times: 1000 -}},
                {% if request.design_mode == false %}
                  "type": "loop"
                {% else %}
                  "type": "slide"
                {% endif %}
              }'
            >
              <div class="splide__track">
                <div class="splide__list splide-slider--h-scroll" style="--init-divider: 1; --init-mob-divider: 1;">
                  {%- for block in section.blocks -%}
                    {%- case block.type -%}
                      {%- when 'video' -%}
                        <div class="splide__slide" {{ block.shopify_attributes }}>
                          {%- render 'video-card', card: block, card_media_option: 'adapt' prefix_class: section_prefix_class, index: forloop.index, is_section: true, sizes_attr: sizes_attr, widths_attr: widths_attr, loading_attr: loading_attr, width_attr: 711, section_id: section.id -%}
                        </div>
                      {%- when 'image' -%}
                        {%- liquid
                          capture placeholder_image
                            if forloop.index > 3
                              echo 'hero-apparel-1'
                              else
                                echo 'hero-apparel-' | append: forloop.index
                            endif
                          endcapture

                          capture image_alt
                            if block.settings.image != blank
                              if block.settings.image.alt != blank
                                echo block.settings.image.alt
                                else
                                  echo 'media_with_content.image_alt' | t: index: forloop.index
                              endif
                            endif
                          endcapture

                          assign image_width = 320
                          assign image_src_width = 1140
                          assign image_widths = '320, 374, 412, 486, 620, 665, 710, 768, 950, 1140'
                          assign image_sizes = '(max-width: 767px) 100vw, calc((100vw / 2) - 10px)'
                          unless section.settings.section_full_width
                            assign image_width = 290
                            assign image_src_width = 708
                            assign image_widths = '290, 359, 384, 471, 590, 708'
                            assign image_sizes = '(max-width: 767px) calc(100vw - 30px), (max-width: 1259px) calc((100vw / 2) - 10px), calc((var(--cp-width-px) / 2) - 10px)'
                          endunless
                          assign image_height = image_width | divided_by: block.settings.image.aspect_ratio | round
                        -%}
                        <div class="splide__slide" {{ block.shopify_attributes }}>
                          <div class="{{ section_prefix_class }}_image-wrap {{ image_radius }}">
                            {%- if block.settings.image != blank -%}
                              {{- block.settings.image | image_url: width: image_src_width | image_tag:
                                class: 'object-fit object-fit--absolute',
                                loading: loading_attr,
                                width: image_width,
                                height: image_height,
                                widths: image_widths,
                                sizes: image_sizes,
                                alt: image_alt
                              -}}
                              {%- else -%}
                                {{- placeholder_image | placeholder_svg_tag: 'object-fit object-fit--absolute' -}}
                            {%- endif -%}
                          </div>
                        </div>
                    {%- endcase -%}
                  {%- endfor -%}
                </div>
              </div>
              {%- if section.blocks.size > 1 -%}
                {%- if section.settings.show_navigation or section.settings.show_pagination -%}
                  <div class="splide-controls splide__arrows --justify-center">
                    {%- if section.settings.show_navigation -%}
                      <button class="splide__arrow splide__arrow--prev button button--primary button--icn">
                        <span class="visually-hidden">{{- 'accessibility.slider.previous' | t -}}</span>
                        {%- render 'icons-data', width: 10, height: 10, use_icon: true, icon_reference: 'left-arrow' -%}
                      </button>
                    {%- endif -%}
                    <ul
                      class="splide__pagination"
                      role="tablist"
                      aria-label="{{- 'accessibility.slider.pagination_label' | t -}}"
                    ></ul>
                    {%- if section.settings.show_navigation -%}
                      <button class="splide__arrow splide__arrow--next button button--primary button--icn">
                        <span class="visually-hidden">{{- 'accessibility.slider.next' | t -}}</span>
                        {%- render 'icons-data', width: 10, height: 10, use_icon: true, icon_reference: 'right-arrow' -%}
                      </button>
                    {%- endif -%}
                  </div>
                {%- endif -%}
              {%- endif -%}
            </div>
          </splide-slider>
        </div>
      {%- endif -%}
      <div class="container">
        <div class="{{ section_prefix_class }}_col {{ section_prefix_class }}_col-description {{ section_height_class }} --v-align-{{ section.settings.content_alignment }} {% if section.blocks.size == 0 %}--content-center{% endif %}">
          <div class="{{ section_prefix_class }}_content --q-align">
            {%- if section.settings.image != blank -%}
              <i class="{{ section_prefix_class }}_content-icn">
                {{- section.settings.image | image_url: width: section.settings.image.width | image_tag: class: '', loading: loading_attr, widths: '225, 412, 550', sizes: '(max-width: 767px) 225px, 20vw', alt: image_alt -}}
              </i>
            {%- endif -%}
            {%- if section.settings.section_heading != blank or section.settings.section_caption != blank -%}
              <header class="heading-head">
                {%- if section.settings.section_heading != blank -%}
                  <h2 class="{{ section_prefix_class }}_heading {{ section.settings.section_heading_weight }} {{ section.settings.section_heading_size }} --h-anchor-none mty">
                    {{- section.settings.section_heading -}}
                  </h2>
                {%- endif -%}
                {%- if section.settings.section_caption != blank -%}
                  <strong class="{{ section.settings.section_caption_size }} {{ section.settings.section_caption_weight }} {{ section_prefix_class }}_caption-title">
                    {{- section.settings.section_caption -}}
                  </strong>
                {%- endif -%}
              </header>
            {%- endif -%}
            {%- if section.settings.section_description != blank -%}
              <div class="{{ section_prefix_class }}_description --word-break {{ section.settings.description_text_size }} {{ section.settings.section_description_weight }} mty">
                {{- section.settings.section_description -}}
              </div>
            {%- endif -%}
            {%- if section.settings.view_more_label != blank -%}
              <footer class="{{ section_prefix_class }}_foot">
                <a
                  {% if section.settings.view_more_link != blank -%}href="{{ section.settings.view_more_link }}" {% if section.settings.open_new_window %}target="_blank"{% endif %}{% else %}aria-disabled="true"{% endif %}
                  class="link-icn --fw-semi-bold {{ section_prefix_class }}_link-icn"
                >
                  <i class="link-icn_icn">
                    {%- render 'icons-data', width: 23, height: 16, use_icon: true, icon_reference: 'arrow-diago-right' -%}
                  </i>
                  {{- section.settings.view_more_label -}}
                </a>
              </footer>
            {%- endif -%}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
