{%- liquid
  assign section_prefix_class = 'media-with-content'
  assign section_scheme_class = section.settings.section_color_scheme | prepend: 'scheme scheme--'

  capture cols_order_class
    if section.settings.section_media_order == 'row_reverse'
      echo '--row-reverse'
      else
        echo '--row'
    endif
  endcapture

  capture loading_attr
    unless section.index != 1
      echo 'eager'
      else
        echo 'lazy'
    endunless
  endcapture

  capture image_radius
    if section.settings.desktop_enable_container
     echo '--image-full-radius'
    else 
      echo '--image-container-radius'
    endif
  endcapture

  capture container_class
    if section.settings.section_full_width
      echo 'container-fluid'
      else
        echo 'container'
    endif
  endcapture

  capture section_height_class
    case section.settings.section_carousel_height
      when 'small'
        echo '--small-content'
      when 'medium'
        echo '--medium-content'
      when 'window_height'
        echo '--vh-content'
    endcase
  endcapture

  assign widths_attr = '284, 363, 376, 474, 711'
  assign sizes_attr = '(max-width: 412px) 376px, (max-width: 767px) calc(100vw - 30px), (max-width: 991px) calc((var(--cp-width-px) * 50 / 100) - 70px), calc((var(--cp-width-px) * 40 / 100) - 70px)'
-%}
{%- style -%}
  .video-card_caption{
    padding-top: 12px;
    padding-bottom: 12px;
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    display: flex;
    z-index: 2;
    overflow-x: hidden;
    overflow-y: auto;
  }

  .video-card_caption-title{
    padding: 7px 10px;
    display: block;
  }

  .video-card_caption-align-wrap{
    max-width: 37%;
    padding: 0;
  }

  .media-with-content{
    --q-align-value: var(--mobile-q-align);
  }

  .media-with-content{
    --cp-spacer-left: 0;
    --cp-spacer-right: 0;
  }

  .media-with-content_wrapper{
    border-radius: 0;
  }

  .media-with-content_wrapper--no-box,
  .--image-full-radius{
    border-radius: var(--section-radius);
  }

  .media-with-content .splide__slide{
    padding: 4px;
  }

  .media-with-content .video-card .video-card_media {
    min-height: 150px;
  }

  .media-with-content .video-card {
    height: 100%;
  }

  .media-with-content_wrapper.--row-reverse{
    flex-direction: row-reverse;
  }

  .media-with-content_image-wrap{
    overflow: hidden;
    padding-top: 50%;
  }

  .media-with-content_image-wrap img{
    border-radius: inherit;
  }

  strong.h5.media-with-content_caption-title,
  strong.h4.media-with-content_caption-title,
  strong.h6.media-with-content_caption-title,
  .media-with-content_content-icn{
    display: block;
  }

  strong.h5.media-with-content_caption-title,
  strong.h4.media-with-content_caption-title,
  strong.h6.media-with-content_caption-title{
    margin-bottom: 17px;
    margin-top: 0;
  }

  .media-with-content_heading {
    margin-bottom: 23px;
  }

  .media-with-content_foot {
    margin-top: 25px;
  }

  .media-with-content .splide-controls{
    gap: 10px;
    margin-left: 10px;
    margin-right: 10px;
    transition: opacity 0.3s ease, visibility 0.3s ease;
    margin-top: 20px;
    --ixi-padding-x: 6px;
    --ixi-padding-y: 6px;
  }

  .media-with-content_col-description{
    padding: 25px 30px;
  }

  .media-with-content_content-icn,
  .media-with-content_content{
    width: 100%;
  }

  .media-with-content.--remove-sliders .splide-controls{
    display: none;
  }

  .media-with-content_link-icn {
    font-size: 2.2rem;
    line-height: 2.6rem;
    font-family: var(--font-headings-family);
  }

  .media-with-content .deferred-media__poster{
    --focus-outline-offset: 1px;
  }

  @media (min-width: 576px){
    .media-with-content_col-description{
      padding: 25px 40px;
    }
  }

  @media (min-width: 768px){
    .video-card_caption{
      padding-top: 42px;
      padding-bottom: 42px;
    }

    .video-card_caption-title{
      padding: 14px 20px;
    }

    .video-card_caption-align-wrap{
      max-width: 44%;
    }

    .media-with-content{
      --q-align-value: var(--desktop-q-align);
    }

    .media-with-content_wrapper{
      position: relative;
      overflow: hidden;
    }

    .--row-reverse .media-with-content_col-media{
      right: 0;
    }

    .--row .media-with-content_col-media{
      left: 0;
    }

    .media-with-content_col-media{
      width: 50%;
      position: absolute;
      top: 0;
      bottom: 0;
      padding: 5px;
    }

    .--row-reverse .media-with-content_col-description{
      margin-right: auto;
    }

    .--row .media-with-content_col-description{
      margin-left: auto;
    }
    
    .media-with-content_col-description{
      padding: 20px 50px;
      max-width: 420px;
      display: flex;
    }

    .--row-reverse .media-with-content_col-description{
      max-width: 420px;
    }

    .media-with-content_col-description.--content-center{
      max-width: 100%;
    }

    .media-with-content splide-slider,
    .media-with-content .splide,
    .media-with-content .splide__track,
    .media-with-content .splide__list,
    .media-with-content .splide__slide,
    .media-with-content_image-wrap {
      height: 100%;
    }

    .media-with-content_image-wrap,
    .media-with-content .video-card {
      padding-top: 0;
    }
    
    .media-with-content .splide-controls{
      position: absolute;
      bottom: 20px;
      left: 0;
      right: 0;
      opacity: 0;
      visibility: hidden;
      margin-top: 42px;
      --ixi-padding-x: 9px;
      --ixi-padding-y: 9px;
    }
    
    .media-with-content_col-media:hover .splide-controls{
      opacity: 1;
      visibility: visible;
    }

    .--small-content{
      min-height: 420px;
    }

    .--medium-content{
      min-height: 550px;
    }

    .--vh-content{
      min-height: 700px;
    }
  }

  @media (min-width: 992px){
    .media-with-content_col-description,
    .--row-reverse .media-with-content_col-description{
      max-width: calc(550px - 30px);
    }

    .--small-content{
      min-height: 470px;
    }

    .--medium-content{
      min-height: 600px;
    }

    .--vh-content{
      min-height: 800px;
    }
  }

  @media (min-width: 1200px){
    .media-with-content_col-description,
    .--row-reverse .media-with-content_col-description{
      max-width: calc(650px - 30px);
    }

    .--small-content{
      min-height: 500px;
    }

    .--medium-content{
      min-height: 650px;
    }

    .--vh-content{
      min-height: 900px;
    }
  }

