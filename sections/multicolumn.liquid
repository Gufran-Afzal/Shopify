{%- liquid
  assign section_prefix_class = 'multicolumn'
  assign section_scheme_class = section.settings.section_color_scheme | prepend: 'scheme scheme--'

  capture max_header_size
    echo settings.page_width | times: section.settings.max_header_size | divided_by: 100
  endcapture
-%}
{%- style -%}
  .column-card{
    display: flex;
    flex-direction: column;
  }

  .column-card_top-wrap{
    flex-grow: 1;
  }

  .column-card_image {
    border-radius: var(--section-radius);
    overflow: hidden;
    margin-bottom: 23px;
  }

  .column-card_image img {
    border-radius: inherit;
  }

  .column-card_heading{
    --mt-bottom: 8px;
  }

  .column-card_foot{
    flex-shrink: 0;
    margin-top: 28px;
  }

  .column-card_image--one-third{
    width: 25%;
  }

  .column-card_image--half{
    width: 50%;
  }

  .column-card_image--full,
  .column-card_image--tag-full img,
  .column-card{
    width: 100%;
  }

  .multicolumn{
    --desktop-columns-count: 1;
    --q-align-value: var(--mobile-q-align);
  }

  .multicolumn .heading-head{
    width: 100%;
    margin-bottom: calc(48px / 1.6);
  }

  .multicolumn_grid .grid_col{
    display: flex;
  }

  .multicolumn_description{
    --mt-top: 12px;
  }

  .multicolumn--bdr-bottom {
    border-bottom: 1px solid var(--section-border-color);
  }

  .multicolumn--bdr-top {
    border-top: 1px solid var(--section-border-color);
  }

  .multicolumn_slider .column-card .button{
    --focus-outline-offset: -3px;
  }

  @media (min-width: 768px){
    .multicolumn{
      --desktop-columns-count: 3;
      --q-align-value: var(--desktop-q-align);
    }
  }

  @media (min-width: 1200px){
    .multicolumn{
      --desktop-columns-count: var(--columns-count);
    }

    .multicolumn .heading-head{
      margin-bottom: 48px;
    }
  }

  {%- assign query = '414px' -%}
  @media (min-width: {{ query }}) and (max-width: 767px){
    #{{ section.id }}{
      --desktop-columns-count: {{ section.settings.number_of_columns_on_mobile }};
    }
  }
{%- endstyle -%}
<div class="global-block {{ section_prefix_class }} {{ section_prefix_class }}-{{ section.id }} {{ section_scheme_class }} --q-align" id="{{- section.id -}}" style="--section-padding-top: {{ section.settings.section_top_padding }}px; --section-padding-bottom: {{ section.settings.section_bottom_padding }}px; --columns-count: {{ section.settings.number_of_columns_on_desktop }}; --mobile-columns-count: {{ section.settings.number_of_columns_on_mobile }}; --mobile-q-align: {{ section.settings.section_mobile_text_alignment }}; --desktop-q-align: {{ section.settings.section_text_alignment }};">
  <div class="container">
    <div class="{{ section_prefix_class }}_wrapper">
      {%- if section.settings.section_heading != blank or section.settings.section_description != blank -%}
        <header class="heading-head inner-container --word-break --q-align" style="--max-content: {{ max_header_size }}px;">
          {%- if section.settings.section_heading != blank -%}
            <h2 class="{{ section_prefix_class }}_heading --h-anchor-none {{ section.settings.section_heading_size }} {{ section.settings.section_heading_weight }} mty">
              {{- section.settings.section_heading -}}
            </h2>
          {%- endif -%}
          {%- if section.settings.section_description != blank -%}
            <div class="{{ section_prefix_class }}_description --word-break {{ section.settings.description_text_size }} {{ section.settings.section_description_weight }} mty">
              {{- section.settings.section_description -}}
            </div>
          {%- endif -%}
        </header>
      {%- endif -%}
      {%- if section.settings.enable_slideshow -%}
        <splide-slider
          data-slider-type="default"
          {% if request.design_mode %}
            data-go-to="true"
          {% endif %}
        >
          <div class="splide {{ section_prefix_class }}_slider"
            data-splide='{
              "drag": true,
              "autoplay": {{- section.settings.auto_play -}},
              "rewind": true,
              "gap": "30px",
              "perMove": 1,
              "perPage": 1,
              "arrows": {{- section.settings.show_navigation -}},
              "pagination": {{- section.settings.show_pagination -}},
              "interval": {{- section.settings.change_slides_every | times: 1000 -}},
              "mediaQuery": "min",
              "breakpoints": {
                "414": {
                  "perPage": {{ section.settings.number_of_columns_on_mobile }}
                },
                "768": {
                  "perPage": 2
                },
                "992": {
                  "perPage": 3
                },
                "1200": {
                  "perPage": {{ section.settings.number_of_columns_on_desktop }}
                }
              },
              {% if request.design_mode == false %}
                "type": "loop"
              {% else %}
                "type": "slide"
              {% endif %}
            }'
          >
            <div class="splide__track">
              <div class="splide__list splide-slider--h-scroll" style="--init-divider: {{ section.settings.number_of_columns_on_desktop }}; --init-mob-divider: {{ section.settings.number_of_columns_on_mobile }};">
                {%- for block in section.blocks -%}
                  {%- liquid
                    capture loading_attr
                      unless section.index != 1
                        unless forloop.index != 1
                          echo 'eager'
                          else
                            echo 'lazy'
                        endunless
                        else
                          echo 'lazy'
                      endunless
                    endcapture
                  -%}
                  <div class="splide__slide" {{ block.shopify_attributes }}>
                    {%- render 'column-card', card: block, prefix_class: section_prefix_class, loading_attr: loading_attr -%}
                  </div>
                {%- endfor -%}
              </div>
            </div>
            {%- if section.settings.show_navigation or section.settings.show_pagination -%}
              <div class="splide-controls splide__arrows --justify-center">
                {%- if section.settings.show_navigation -%}
                  <button class="splide__arrow splide__arrow--prev button button--primary button--icn">
                    <span class="visually-hidden">{{- 'accessibility.slider.previous' | t -}}</span>
                    {%- render 'icons-data', width: 10, height: 10, use_icon: true, icon_reference: 'left-arrow' -%}
                  </button>
                {%- endif -%}
                <ul
                  class="splide__pagination"
                  role="tablist"
                  aria-label="{{- 'accessibility.slider.pagination_label' | t -}}"
                ></ul>
                {%- if section.settings.show_navigation -%}
                  <button class="splide__arrow splide__arrow--next button button--primary button--icn">
                    <span class="visually-hidden">{{- 'accessibility.slider.next' | t -}}</span>
                    {%- render 'icons-data', width: 10, height: 10, use_icon: true, icon_reference: 'right-arrow' -%}
                  </button>
                {%- endif -%}
              </div>
            {%- endif -%}
          </div>
        </splide-slider>
        {%- else -%}
          <div class="grid {{ section_prefix_class }}_grid">
            {%- for block in section.blocks -%}
              <div class="grid_col" {{ block.shopify_attributes }}>
                {%- render 'column-card', card: block, prefix_class: section_prefix_class -%}
              </div>
            {%- endfor -%}
          </div>
      {%- endif -%}
    </div>
  </div>
</div>
