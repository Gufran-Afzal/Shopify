{%- liquid
  assign section_prefix_class = 'richtext'
  assign section_scheme_class = section.settings.section_color_scheme | prepend: 'scheme scheme--'

  capture max_content_size
    echo settings.page_width | times: section.settings.max_content_size | divided_by: 100
  endcapture

  capture container_class
    if section.settings.section_full_width
      echo 'container-fluid'
      else
        echo 'container'
    endif
  endcapture
-%}
{%- style -%}
  .richtext .mty{
    --spacer: calc(var(--block-spacing) * 0.6);
    --mt-bottom: var(--spacer);
  }

  .richtext_caption{
    display: block;
  }

  .richtext_button{
    display: inline-flex;
    margin-left: 7px;
    margin-right: 7px;
  }

  @media (min-width: 768px){
    .richtext .mty{
      --spacer: var(--block-spacing);
    }
  }
{%- endstyle -%}
<div class="global-block {{ section_prefix_class }} {{ section_prefix_class }}-{{ section.id }} {{ section_scheme_class }} --align-{{ section.settings.section_text_alignment }}" style="--section-padding-top: {{ section.settings.section_top_padding }}px; --section-padding-bottom: {{ section.settings.section_bottom_padding }}px;">
  <div class="{{ container_class }}" style="--cp-width: {{ max_content_size }}">
    <div class="{{ section_prefix_class }}_wrapper">
      {%- for block in section.blocks -%}
        {%- case block.type -%}
          {%- when 'caption' -%}
            <strong class="{{ section_prefix_class }}_{{ block.type }} {{ block.type }} --word-break {{ block.settings.caption_size }} {{ block.settings.caption_weight }} mty" style="--block-spacing: {{ block.settings.block_spacing }}px;" {{ block.shopify_attributes }}>{{- block.settings.heading -}}</strong>
          {%- when 'heading' -%}
            <h2 class="{{ section_prefix_class }}_{{ block.type }} {{ block.type }} {{ block.settings.heading_size }} {{ block.settings.heading_weight }} --h-anchor-none mty" style="--block-spacing: {{ block.settings.block_spacing }}px;" {{ block.shopify_attributes }}>
              {{- block.settings.heading -}}
            </h2>
          {%- when 'description' -%}
            <div class="{{ section_prefix_class }}_{{ block.type }} {{ block.type }} --word-break {{ block.settings.description_size }} {{ block.settings.description_weight }} mty" style="--block-spacing: {{ block.settings.block_spacing }}px;" {{ block.shopify_attributes }}>
              {{- block.settings.heading -}}
            </div>
          {%- when 'button' -%}
            <div class="{{ section_prefix_class }}_{{ block.type }} mty" style="--block-spacing: {{ block.settings.block_spacing }}px;" {{ block.shopify_attributes }}>
              <a
                {% if block.settings.url != blank %}href="{{ block.settings.url -}}" {% if block.settings.open_new_window %}target="_blank"{% endif %} {% else %} aria-disabled="true" {% endif %}
                class="button button--{{ block.settings.type }}"
              >
                {{- block.settings.heading -}}
              </a>
            </div>
        {%- endcase -%}
      {%- endfor -%}
    </div>
  </div>
</div>
