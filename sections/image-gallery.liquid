{%- liquid
  assign section_prefix_class = 'image-gallery'
  assign section_scheme_class = section.settings.section_color_scheme | prepend: 'scheme scheme--'

  capture max_header_size
    echo settings.page_width | times: section.settings.max_header_size | divided_by: 100
  endcapture

  capture container_class
    if section.settings.section_full_width
      echo 'container-fluid'
      else
        echo 'container'
    endif
  endcapture

  capture remove_grid_spacings
    if section.settings.remove_grid_spacing
      echo '--no-space'
    endif
  endcapture

  capture marquee_direction
    if section.settings.marquee_direction == 'marquee_forward'
      echo 'forward'
      else
        echo 'backward'
    endif
  endcapture

  assign multiply_factor = 4
  if section.blocks.size > 3
    assign multiply_factor = 2
    elsif section.blocks.size > 6
      assign multiply_factor = 1
  endif

  assign widths_attr = '170, 254, 381'
  assign sizes_attr = '(max-width: 412px) 170px, (max-width: 991px) 254px, 381px'
-%}
{%- style -%}
  .image-gallery_image,
  .image-gallery_marquee-col,
  .image-gallery_slide{
    position: relative;
  }

  .image-gallery .heading-head{
    width: 100%;
    margin-bottom: calc(48px / 1.6);
  }

  .image-gallery_image{
    width: 254px;
    padding-top: 142.52%;
    border-radius: var(--section-radius);
  }

  .image-gallery_image img,
  .image-gallery_image svg{
    border-radius: inherit;
  }

  .image-gallery .container-fluid{
    --cp-spacer-left: 0;
    --cp-spacer-right: 0;
  }

  .image-gallery_caption-wrap{
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    overflow-x: hidden;
    overflow-y: auto;
    padding: 10px;
    pointer-events: none;
  }

  .image-gallery_marquee-col{
    padding-left: 7px;
    padding-right: 7px;
  }

  .--no-space .image-gallery_marquee-col{
    padding-left: 0;
    padding-right: 0;
  }

  .image-gallery_caption{
    display: inline-block;
    vertical-align: top;
    background-color: var(--section-heading-color);
    color: var(--section-background-color);
    padding: 8px 15px;
    line-height: 1.2;
  }

  .image-gallery_btn{
    pointer-events: auto;
  }

  @media (min-width: 768px){
    .image-gallery_btn{
      --button-font-size: 2rem;
      --button-line-height: 2.8rem;
      --button-font-weight: 600;
      --button-font-family: var(--font-headings-family)
    }
  }

  @media (min-width:1200px){
    .image-gallery .heading-head{
      margin-bottom: 48px;
    }
  }
{%- endstyle -%}
<div class="global-block {{ section_prefix_class }} {{ section_prefix_class }}-{{ section.id }} {{ section_scheme_class }}" style="--section-slider-radius: 10px; --section-padding-top: {{ section.settings.section_top_padding }}px; --section-padding-bottom: {{ section.settings.section_bottom_padding }}px;">
  <div class="{{ section_prefix_class }}_wrapper">
    <div class="container" style="--cp-width: {{ max_header_size }}">
      {%- if section.settings.section_heading != blank or section.settings.section_description != blank -%}
        <header class="heading-head --word-break --align-{{ section.settings.section_text_alignment }}">
          {%- if section.settings.section_heading != blank -%}
            <h2 class="{{ section_prefix_class }}_heading {{ section.settings.section_heading_weight }} --h-anchor-none {{ section.settings.section_heading_size }} mty">
              {{- section.settings.section_heading -}}
            </h2>
          {%- endif -%}
          {%- if section.settings.section_description != blank -%}
            <div class="{{ section_prefix_class }}_description --word-break {{ section.settings.section_description_weight }} {{ section.settings.description_text_size }} mty">
              <p>{{- section.settings.section_description -}}</p>
            </div>
          {%- endif -%}
        </header>
      {%- endif -%}
    </div>
    <div class="{{ container_class }}">
      <div class="{{ section_prefix_class }}_slide {{ remove_grid_spacings }}">
        <marquee-component data-direction="{{ marquee_direction }}" data-pause-on-hover="{{ section.settings.marquee_on_hover }}" data-speed="{{ section.settings.marquee_speed }}">
          <div class="marquee-component marquee-component--h-scroll">
            {%- for i in (1..multiply_factor) -%}
              {%- for block in section.blocks -%}
                {%- liquid
                  capture image_alt
                    if block.settings.image.alt != blank
                      echo block.settings.image.alt
                      else
                        echo 'image_gallery.image_alt' | t: index: forloop.index
                    endif
                  endcapture

                  capture placeholder_image
                    if forloop.index > 3
                      echo 'hero-apparel-1'
                      else
                        echo 'hero-apparel-' | append: forloop.index
                    endif
                  endcapture
                -%}
                <div class="marquee-component_col {{ section_prefix_class }}_marquee-col clonedBefore">
                  <div class="{{ section_prefix_class }}_image">
                    {%- if block.settings.image != blank -%}
                      {%- assign image_height = 170 | divided_by: block.settings.image.aspect_ratio | round -%}
                      {{- block.settings.image | image_url: width: 381 | image_tag:
                        alt: image_alt,
                        width: 170,
                        height: image_height,
                        class: 'object-fit object-fit--absolute',
                        loading: 'lazy',
                        widths: widths_attr,
                        sizes: sizes_attr
                      -}}
                      {% else %}
                        {{- placeholder_image | placeholder_svg_tag: 'object-fit object-fit--absolute' -}}
                    {%- endif -%}
                  </div>
                </div>
              {%- endfor -%}
            {%- endfor -%}
            {%- for block in section.blocks -%}
              {%- liquid
                capture image_alt
                  if block.settings.image.alt != blank
                    echo block.settings.image.alt
                    else
                      echo 'image_gallery.image_alt' | t: index: forloop.index
                  endif
                endcapture

                capture placeholder_image
                  if forloop.index > 3
                    echo 'hero-apparel-1'
                    else
                      echo 'hero-apparel-' | append: forloop.index
                  endif
                endcapture
              -%}
              <div class="marquee-component_col {{ section_prefix_class }}_marquee-col">
                <div class="{{ section_prefix_class }}_image">
                  {%- if block.settings.image != blank -%}
                    {%- assign image_height = 170 | divided_by: block.settings.image.aspect_ratio | round -%}
                    {{- block.settings.image | image_url: width: 381 | image_tag:
                      alt: image_alt,
                      width: 170,
                      height: image_height,
                      class: 'object-fit object-fit--absolute',
                      loading: 'lazy',
                      widths: widths_attr,
                      sizes: sizes_attr
                    -}}
                    {% else %}
                      {{- placeholder_image | placeholder_svg_tag: 'object-fit object-fit--absolute' -}}
                  {%- endif -%}
                </div>
              </div>
            {%- endfor -%}
            {%- for i in (1..multiply_factor) -%}
              {%- for block in section.blocks -%}
                {%- liquid
                  capture image_alt
                    if block.settings.image.alt != blank
                      echo block.settings.image.alt
                      else
                        echo 'image_gallery.image_alt' | t: index: forloop.index
                    endif
                  endcapture

                  capture placeholder_image
                    if forloop.index > 3
                      echo 'hero-apparel-1'
                      else
                        echo 'hero-apparel-' | append: forloop.index
                    endif
                  endcapture
                -%}
                <div class="marquee-component_col {{ section_prefix_class }}_marquee-col clonedAfter">
                  <div class="{{ section_prefix_class }}_image">
                    {%- if block.settings.image != blank -%}
                      {%- assign image_height = 170 | divided_by: block.settings.image.aspect_ratio | round -%}
                      {{- block.settings.image | image_url: width: 381 | image_tag:
                        alt: image_alt,
                        width: 170,
                        height: image_height,
                        class: 'object-fit object-fit--absolute',
                        loading: 'lazy',
                        widths: widths_attr,
                        sizes: sizes_attr
                      -}}
                      {% else %}
                        {{- placeholder_image | placeholder_svg_tag: 'object-fit object-fit--absolute' -}}
                    {%- endif -%}
                  </div>
                </div>
              {%- endfor -%}
            {%- endfor -%}
          </div>
        </marquee-component>
        {%- if section.settings.caption != blank or section.settings.button_label != blank -%}
          <div class="{{ section_prefix_class }}_caption-wrap align-holder --align-center align-holder--{{ section.settings.caption_content_alignment }}">
            <div class="align-holder_wrapper">
              {%- if section.settings.caption != blank -%}
                <strong class="{{ section_prefix_class }}_caption text-size--large --word-break --fw-medium">
                  {{- section.settings.caption -}}
                </strong>
              {%- endif -%}
              {%- if section.settings.button_label != blank -%}
                <div class="{{ section_prefix_class }}_btn-wrap">
                  <a
                    {% if section.settings.url != blank -%}href="{{ section.settings.url }}" {% if section.settings.open_new_window %}target="_blank"{% endif %}{% else %} aria-disabled="true" {% endif %}
                    class="button button--{{ section.settings.type }} {{ section_prefix_class }}_btn"
                  >
                    {{- section.settings.button_label -}}
                  </a>
                </div>
              {%- endif -%}
            </div>
          </div>
        {%- endif -%}
      </div>
    </div>
  </div>
</div>
{% schema %}
