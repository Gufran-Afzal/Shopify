{%- liquid
  assign section_prefix_class = 'logo-list'
  assign section_scheme_class = section.settings.section_color_scheme | prepend: 'scheme scheme--'

  capture loading_attr
    unless section.index != 1
      echo 'eager'
      else
        echo 'lazy'
    endunless
  endcapture

  capture container_class
    if section.settings.section_full_width
      echo 'container-fluid'
      else
        echo 'container'
    endif
  endcapture

  capture is_marquee_on
    if section.settings.enable_marquee
      echo 'true'
    endif
  endcapture

  assign multiply_factor = 6
  if section.blocks.size > 3
    assign multiply_factor = 4
    elsif section.blocks.size > 6
      assign multiply_factor = 2
  endif
-%}
{%- style -%}
  .logo-list--no-gutter .container-fluid{
    --cp-spacer-left: 0;
    --cp-spacer-right: 0;
  }

  .logo-list_list{
    display: flex;
    width: 100%;
    flex-wrap: wrap;
    row-gap: 30px;
    justify-content: center;
  }

  .logo-list marquee-component,
  .logo-list_list{
    margin-top: auto;
    margin-bottom: auto;
  }

  .logo-list_list li{
    flex: 0 0 calc(100% / 2);
  }

  .logo-list_list li,
  .logo-list .marquee-component_col{
    display: flex;
    height: 84px;
  }

  .logo-list .marquee-component_col{
    width: calc(var(--cp-width) * 1px / 3.76 - (var(--cp-spacer-left, 15px) + var(--cp-spacer-right, 15px)));
    padding-left: 0;
    padding-right: 0;
  }

  .logo-list .img-placeholder{
    width: 100%;
    height: 84px;
  }

  .logo-list .img-placeholder path{
    fill: currentColor;
  }

  .logo-list_list-logo{
    width: 100%;
    display: flex;
    padding-left: 10px;
    padding-right: 10px;
  }

  .logo-list_list-logo img,
  .logo-list .img-placeholder{
    margin: auto;
  }

  .logo-list_list-logo img{
    width: auto;
    max-height: 100%;
  }

  @media (min-width: 768px){
    .logo-list_list-logo{
      padding-left: 35px;
      padding-right: 35px;
    }
  }

  @media (min-width: 992px){
    .logo-list_list li{
      flex: 0 0 calc(100% / 4);
    }

    .logo-list_list-logo{
      padding-left: 42px;
      padding-right: 42px;
    }
  }
{%- endstyle -%}
<div class="global-block {{ section_prefix_class }} {{ section_prefix_class }}-{{ section.id }} {{ section_scheme_class }} {% if is_marquee_on == 'true' %}{{ section_prefix_class }}--no-gutter{% endif %}" style="--section-padding-top: {{ section.settings.section_top_padding }}px; --section-padding-bottom: {{ section.settings.section_bottom_padding }}px;">
  <div class="{{ container_class }}">
    <div class="{{ section_prefix_class }}_wrapper">
      {%- if section.settings.enable_marquee -%}
        <marquee-component data-direction="{{- section.settings.marquee_direction -}}" data-pause-on-hover="{{- section.settings.marquee_on_hover -}}" data-speed="{{- section.settings.marquee_speed -}}">
          <div class="marquee-component marquee-component--h-scroll">
            {%- for i in (1..multiply_factor) -%}
              {%- for block in section.blocks -%}
                <div class="marquee-component_col {{ section_prefix_class }}_marquee-col clonedBefore">
                  <span class="{{ section_prefix_class }}_list-logo">
                    {%- if block.settings.image != blank -%}
                      {%- liquid
                        assign logo_width = block.settings.image.width | round
                        capture image_alt
                          unless block.settings.image.alt == blank
                            echo block.settings.image.alt
                            else
                              echo 'logo_list.image_alt' | t: index: forloop.index
                          endunless
                        endcapture
      
                        capture logo_widths
                          echo logo_width
                        endcapture
                      -%}
                      {%- capture logo_sizes -%}
                        {{- logo_width | prepend: '(min-width: 50px) ' | append: 'px' -}}
                      {%- endcapture -%}
                      {{- block.settings.image | image_url: width: logo_width | image_tag: sizes: logo_sizes, alt: image_alt, widths: logo_widths, loading: loading_attr -}}
                      {%- else -%}
                        {{- 'lifestyle-1' | placeholder_svg_tag: 'img-placeholder' -}}
                    {%- endif -%}
                  </span>
                </div>
              {%- endfor -%}
            {%- endfor -%}
            {%- for block in section.blocks -%}
              <div class="marquee-component_col {{ section_prefix_class }}_marquee-col">
                <span class="{{ section_prefix_class }}_list-logo">
                  {%- if block.settings.image != blank -%}
                    {%- liquid
                      assign logo_width = block.settings.image.width | round
                      capture image_alt
                        unless block.settings.image.alt == blank
                          echo block.settings.image.alt
                          else
                            echo 'logo_list.image_alt' | t: index: forloop.index
                        endunless
                      endcapture
    
                      capture logo_widths
                        echo logo_width
                      endcapture
                    -%}
                    {%- capture logo_sizes -%}
                      {{- logo_width | prepend: '(min-width: 50px) ' | append: 'px' -}}
                    {%- endcapture -%}
                    {{- block.settings.image | image_url: width: logo_width | image_tag: sizes: logo_sizes, alt: image_alt, widths: logo_widths, loading: loading_attr -}}
                    {%- else -%}
                      {{- 'lifestyle-1' | placeholder_svg_tag: 'img-placeholder' -}}
                  {%- endif -%}
                </span>
              </div>
            {%- endfor -%}
            {%- for i in (1..multiply_factor) -%}
              {%- for block in section.blocks -%}
                <div class="marquee-component_col {{ section_prefix_class }}_marquee-col clonedAfter">
                  <span class="{{ section_prefix_class }}_list-logo">
                    {%- if block.settings.image != blank -%}
                      {%- liquid
                        assign logo_width = block.settings.image.width | round
                        capture image_alt
                          unless block.settings.image.alt == blank
                            echo block.settings.image.alt
                            else
                              echo 'logo_list.image_alt' | t: index: forloop.index
                          endunless
                        endcapture
      
                        capture logo_widths
                          echo logo_width
                        endcapture
                      -%}
                      {%- capture logo_sizes -%}
                        {{- logo_width | prepend: '(min-width: 50px) ' | append: 'px' -}}
                      {%- endcapture -%}
                      {{- block.settings.image | image_url: width: logo_width | image_tag: sizes: logo_sizes, alt: image_alt, widths: logo_widths, loading: loading_attr -}}
                      {%- else -%}
                        {{- 'lifestyle-1' | placeholder_svg_tag: 'img-placeholder' -}}
                    {%- endif -%}
                  </span>
                </div>
              {%- endfor -%}
            {%- endfor -%}
          </div>
        </marquee-component>
        {%- else -%}
          <ul class="list-unstyled {{ section_prefix_class }}_list --justify-center">
            {%- for block in section.blocks -%}
              <li {{ block.shopify_attributes }}>
                <span class="{{ section_prefix_class }}_list-logo">
                  {%- if block.settings.image != blank -%}
                    {%- liquid
                      assign logo_width = block.settings.image.width | round
                      capture image_alt
                        unless block.settings.image.alt == blank
                          echo block.settings.image.alt
                          else
                            echo 'logo_list.image_alt' | t: index: forloop.index
                        endunless
                      endcapture

                      capture logo_widths
                        echo logo_width
                      endcapture
                    -%}
                    {%- capture logo_sizes -%}
                      {{- logo_width | prepend: '(min-width: 50px) ' | append: 'px' -}}
                    {%- endcapture -%}
                    {{- block.settings.image | image_url: width: logo_width | image_tag: sizes: logo_sizes, alt: image_alt, widths: logo_widths, loading: loading_attr -}}
                    {%- else -%}
                      {{- 'lifestyle-1' | placeholder_svg_tag: 'img-placeholder' -}}
                  {%- endif -%}
                </span>
              </li>
            {%- endfor -%}
          </ul>
      {%- endif -%}
    </div>
  </div>
</div>
{% schema %}
{
  "name": "t:sections.logo_list.name",
  "tag": "section",
  "disabled_on": {
    "groups": [
      "header",
      "footer",
      "custom.overlay"
    ]
  },
  "settings": [
    {
      "type": "header",
      "content": "t:layout.content"
    },
    {
      "type": "checkbox",
      "id": "section_full_width",
      "label": "t:sections.full_width.label",
      "default": false
    },
    {
      "type": "color_scheme",
      "id": "section_color_scheme",
      "default": "scheme1",
      "label": "t:color_scheme.label"
    },
    {
      "type": "header",
      "content": "t:scroll.content"
    },
    {
      "type": "checkbox",
      "label": "t:sections.logo_list.settings.enable_scrolling",
      "id": "enable_marquee",
      "default": false
    },
    {
      "type": "range",
      "id": "marquee_speed",
      "label": "t:scroll.settings.speed.label",
      "min": 1,
      "max": 30,
      "step": 1,
      "default": 15,
      "unit": "sec"
    },
    {
      "type": "select",
      "id": "marquee_direction",
      "label": "t:scroll.settings.direction.label",
      "options": [
        {
          "value": "marquee_backward",
          "label": "t:scroll.settings.direction.options.opt_1.label"
        },
        {
          "value": "marquee_forward",
          "label": "t:scroll.settings.direction.options.opt_2.label"
        }
      ],
      "default": "marquee_backward"
    },
    {
      "type": "checkbox",
      "label": "t:scroll.settings.on_hover.label",
      "id": "marquee_on_hover",
      "default": false
    },
    {
      "type": "header",
      "content": "t:spacing.content"
    },
    {
      "type": "range",
      "id": "section_top_padding",
      "label": "t:spacing.settings.top.label",
      "min": 0,
      "max": 50,
      "step": 1,
      "default": 10,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "section_bottom_padding",
      "label": "t:spacing.settings.bottom.label",
      "min": 0,
      "max": 50,
      "step": 1,
      "default": 10,
      "unit": "px"
    }
  ],
  "blocks": [
    {
      "name": "t:sections.logo_list.blocks.logo.name",
      "type": "logo",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "t:image.label",
          "info": "t:sections.logo_list.blocks.logo.settings.image.info"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "t:sections.logo_list.name",
      "blocks": [
        {
          "type": "logo",
          "settings": {
          }
        },
        {
          "type": "logo",
          "settings": {
          }
        },
        {
          "type": "logo",
          "settings": {
          }
        },
        {
          "type": "logo",
          "settings": {
          }
        }
      ]
    }
  ]
}
{% endschema %}